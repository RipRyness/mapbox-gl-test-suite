{
  "version": 8,
  "constants": {
    "@constant": {
      "type": "number",
      "value": 10
    }
  },
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": [
        "local://tiles/{z}-{x}-{y}.vector.pbf"
      ]
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "white"
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "mapbox",
      "source-layer": "road",
      "paint.literal": {
        "line-width": 5,
        "line-gap-width": 5
      },
      "paint.constant": {
        "line-width": "@constant",
        "line-gap-width": "@constant"
      },
      "paint.function": {
        "line-width": {
          "domain": [
            16,
            17
          ],
          "range": [
            15,
            20
          ],
          "type": "exponential"
        },
        "line-gap-width": {
          "domain": [
            16,
            17
          ],
          "range": [
            15,
            20
          ],
          "type": "exponential"
        }
      }
    }
  ]
}
