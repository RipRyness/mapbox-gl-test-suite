{
    "version": 4,
    "sources": {
        "mapbox": {
            "type": "vector",
            "url": "local://tiles/{z}-{x}-{y}.vector.pbf",
            "maxZoom": 14
        }
    },
    "sprite": "local://sprites/sprite",
    "glyphs": "local://glyphs/{fontstack}/{range}.pbf",
    "constants": {
        "@constant": 0.4
    },
    "layers": [{
        "id": "background",
        "type": "background",
        "style": {
            "background-color": "white"
        }
    }, {
        "id": "icon",
        "source": "mapbox",
        "source-layer": "poi_label",
        "type": "symbol",
        "filter": {
            "maki": "restaurant"
        },
        "render": {
            "symbol-placement": "point",
            "icon-allow-overlap": true,
            "icon-ignore-placement": true,
            "icon-image": "building-12"
        },
        "style.literal": {
            "icon-opacity": 0.3
        },
        "style.constant": {
            "icon-opacity": "@constant"
        },
        "style.function": {
            "icon-opacity": {
                "stops": [[16, 0.5], [17, 0.6]]
            }
        },
        "style.text-and-icon": {
            "icon-opacity": 0
        },
        "style.text-only": {
            "icon-opacity": 0
        },
        "style.icon-only": {
            "icon-opacity": 0
        }
    }, {
        "id": "text-and-icon",
        "source": "mapbox",
        "source-layer": "poi_label",
        "type": "symbol",
        "filter": {
            "maki": "restaurant"
        },
        "render": {
            "symbol-placement": "point",
            "icon-allow-overlap": true,
            "icon-ignore-placement": true,
            "icon-image": "building-12",
            "text-allow-overlap": true,
            "text-ignore-placement": true,
            "text-field": "Test",
            "text-font": "Open Sans Semibold, Arial Unicode MS Bold"
        },
        "style": {
            "icon-opacity": 0,
            "text-opacity": 0
        },
        "style.text-and-icon": {
            "icon-opacity": 1,
            "text-opacity": 1
        },
        "style.text-only": {
            "text-opacity": 1
        },
        "style.icon-only": {
            "icon-opacity": 1
        }
    }]
}
