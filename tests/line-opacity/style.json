{
  "version": 5,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["http://localhost:2900/tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "constants": {
    "@constant": 0.4
  },
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "white"
    }
  }, {
    "id": "road",
    "source": "mapbox",
    "source-layer": "road",
    "type": "line",
    "style": {
      "line-width": 10,
      "line-color": "#000"
    },
    "style.literal": {
      "line-opacity": 0.3
    },
    "style.constant": {
      "line-opacity": "@constant"
    },
    "style.function": {
      "line-opacity": {
        "stops": [[16, 0.5], [17, 0.6]]
      }
    }
  }]
}
