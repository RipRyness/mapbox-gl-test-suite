{
  "version": 8,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": [
        "local://tiles/{z}-{x}-{y}.vector.pbf"
      ]
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "white"
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "mapbox",
      "source-layer": "road",
      "paint": {
        "line-width": 10,
        "line-color": "#000"
      },
      "paint.literal": {
        "line-opacity": 0.3
      },
      "paint.function": {
        "line-opacity": {
          "stops": [
            [
              16,
              0.5
            ],
            [
              17,
              0.6
            ]
          ]
        }
      }
    }
  ]
}
