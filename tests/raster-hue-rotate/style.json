{
    "version": 5,
    "sources": {
        "satellite": {
            "type": "raster",
            "tiles": ["http://localhost:2900/tiles/{z}-{x}-{y}.satellite.png"],
            "maxzoom": 17,
            "tileSize": 256
        }
    },
    "constants": {
        "@constant": 180
    },
    "layers": [{
        "id": "raster",
        "type": "raster",
        "source": "satellite",
        "style": {
            "raster-fade-duration": 0
        },
        "style.literal": {
            "raster-hue-rotate": 90
        },
        "style.constant": {
            "raster-hue-rotate": "@constant"
        },
        "style.function": {
            "raster-hue-rotate": {
                "stops": [[16, 270], [17, 365]]
            }
        }
    }]
}
