{
    "version": 4,
    "sources": {
        "mapbox": {
            "type": "vector",
            "url": "local://tiles/{z}-{x}-{y}.vector.pbf"
        }
    },
    "constants": {
        "@constant": "red"
    },
    "layers": [{
        "id": "background",
        "type": "background",
        "style": {
            "background-color": "white"
        }
    }, {
        "id": "road",
        "source": "mapbox",
        "source-layer": "road",
        "type": "line",
        "style": {
            "line-width": 10
        },
        "style.literal": {
            "line-color": "blue"
        },
        "style.constant": {
            "line-color": "@constant"
        },
        "style.function": {
            "line-color": {
                "stops": [[16, "green"], [17, "blue"]]
            }
        }
    }]
}
