{
  "version": 5,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["http://localhost:2900/tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "sprite": "http://localhost:2900/sprites/sprite",
  "constants": {
    "@constant": 3
  },
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "white"
    }
  }, {
    "id": "icon",
    "source": "mapbox",
    "source-layer": "poi_label",
    "type": "symbol",
    "filter": { "maki": "restaurant" },
    "render": {
      "symbol-placement": "point",
      "icon-allow-overlap": true,
      "icon-ignore-placement": true,
      "icon-image": "dot.sdf"
    },
    "style": {
      "icon-halo-color": "blue",
      "icon-halo-width": 4
    },
    "style.literal": {
      "icon-halo-blur": 2
    },
    "style.constant": {
      "icon-halo-blur": "@constant"
    },
    "style.function": {
      "icon-halo-blur": {
        "stops": [[16, 4], [17, 5]]
      }
    }
  }]
}
