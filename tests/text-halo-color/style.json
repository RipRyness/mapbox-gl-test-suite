{
    "version": 4,
    "sources": {
        "mapbox": {
            "type": "vector",
            "url": "local://tiles/{z}-{x}-{y}.vector.pbf",
            "maxZoom": 14
        }
    },
    "glyphs": "local://glyphs/{fontstack}/{range}.pbf",
    "constants": {
        "@constant": "green"
    },
    "layers": [{
        "id": "background",
        "type": "background",
        "style": {
            "background-color": "white"
        }
    }, {
        "id": "text",
        "source": "mapbox",
        "source-layer": "poi_label",
        "type": "symbol",
        "filter": {
            "maki": "restaurant"
        },
        "render": {
            "symbol-placement": "point",
            "text-allow-overlap": true,
            "text-ignore-placement": true,
            "text-field": "Test",
            "text-font": "Open Sans Semibold, Arial Unicode MS Bold"
        },
        "style": {
            "text-halo-width": 4
        },
        "style.literal": {
            "text-halo-color": "blue"
        },
        "style.constant": {
            "text-halo-color": "@constant"
        },
        "style.function": {
            "text-halo-color": {
                "stops": [[16, "red"], [17, "blue"]]
            }
        }
    }]
}
