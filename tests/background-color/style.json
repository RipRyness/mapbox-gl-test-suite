{
  "version": 8,
  "constants": {
    "@green": {
      "type": "color",
      "value": "green"
    }
  },
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": [
        "local://tiles/{z}-{x}-{y}.vector.pbf"
      ]
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint.literal": {
        "background-color": "red"
      },
      "paint.constant": {
        "background-color": "@green"
      },
      "paint.function": {
        "background-color": {
          "domain": [
            0,
            10
          ],
          "range": [
            "blue",
            "white"
          ],
          "type": "exponential"
        }
      }
    }
  ]
}
