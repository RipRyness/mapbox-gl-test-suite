{
  "version": 5,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["local://tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "sprite": "local://sprites/sprite",
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "white"
    }
  }, {
    "id": "point-close",
    "source": "mapbox",
    "source-layer": "poi_label",
    "type": "symbol",
    "filter": { "maki": "restaurant" },
    "render": {
      "icon-image": "{maki}-12",
      "icon-allow-overlap": true,
      "icon-ignore-placement": true,
      "symbol-placement": "point",
      "symbol-min-distance": 20
    },
    "style": {
      "icon-opacity": 0
    },
    "style.point-close": {
      "icon-opacity": 1
    }
  }, {
    "id": "point-far",
    "source": "mapbox",
    "source-layer": "poi_label",
    "type": "symbol",
    "filter": { "maki": "restaurant" },
    "render": {
      "icon-image": "{maki}-12",
      "icon-allow-overlap": true,
      "icon-ignore-placement": true,
      "symbol-placement": "point",
      "symbol-min-distance": 50
    },
    "style": {
      "icon-opacity": 0
    },
    "style.point-far": {
      "icon-opacity": 1
    }
  }, {
    "id": "line-close",
    "source": "mapbox",
    "source-layer": "road",
    "type": "symbol",
    "render": {
      "icon-image": "triangle-stroked-12",
      "icon-allow-overlap": true,
      "icon-ignore-placement": true,
      "symbol-placement": "line",
      "symbol-min-distance": 20
    },
    "style": {
      "icon-opacity": 0
    },
    "style.line-close": {
      "icon-opacity": 1
    }
  }, {
    "id": "line-far",
    "source": "mapbox",
    "source-layer": "road",
    "type": "symbol",
    "render": {
      "icon-image": "triangle-stroked-12",
      "icon-allow-overlap": true,
      "icon-ignore-placement": true,
      "symbol-placement": "line",
      "symbol-min-distance": 50
    },
    "style": {
      "icon-opacity": 0
    },
    "style.line-far": {
      "icon-opacity": 1
    }
  }]
}
