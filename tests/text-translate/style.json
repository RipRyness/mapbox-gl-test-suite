{
  "version": 5,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["http://localhost:2900/tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "glyphs": "http://localhost:2900/glyphs/{fontstack}/{range}.pbf",
  "constants": {
    "@constant": [10, 10]
  },
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "white"
    }
  }, {
    "id": "text",
    "source": "mapbox",
    "source-layer": "poi_label",
    "type": "symbol",
    "filter": { "maki": "restaurant" },
    "render": {
      "symbol-placement": "point",
      "text-allow-overlap": true,
      "text-ignore-placement": true,
      "text-field": "Test",
      "text-font": "Open Sans Semibold, Arial Unicode MS Bold"
    },
    "style.literal": {
      "text-translate": [5, 5]
    },
    "style.constant": {
      "text-translate": "@constant"
    },
    "style.function": {
      "text-translate": [{
        "stops": [[16, 15], [17, 20]]
      }, {
        "stops": [[16, 15], [17, 20]]
      }]
    }
  }]
}
