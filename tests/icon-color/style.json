{
  "version": 5,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["http://localhost:2900/tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "sprite": "http://localhost:2900/sprites/sprite",
  "constants": {
    "@constant": "green"
  },
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "white"
    }
  }, {
    "id": "icon",
    "source": "mapbox",
    "source-layer": "poi_label",
    "type": "symbol",
    "filter": { "maki": "restaurant" },
    "render": {
      "symbol-placement": "point",
      "icon-allow-overlap": true,
      "icon-ignore-placement": true,
      "icon-image": "dot.sdf"
    },
    "style.literal": {
      "icon-color": "red"
    },
    "style.constant": {
      "icon-color": "@constant"
    },
    "style.function": {
      "icon-color": {
        "stops": [[16, "blue"], [17, "red"]]
      }
    }
  }]
}
