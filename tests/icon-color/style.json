{
  "version": 8,
  "constants": {
    "@constant": {
      "type": "color",
      "value": "green"
    }
  },
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": [
        "local://tiles/{z}-{x}-{y}.vector.pbf"
      ]
    }
  },
  "sprite": "local://sprites/sprite",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "white"
      }
    },
    {
      "id": "icon",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "poi_label",
      "filter": [
        "==",
        "maki",
        "restaurant"
      ],
      "layout": {
        "symbol-placement": "point",
        "icon-allow-overlap": true,
        "icon-ignore-placement": true,
        "icon-image": "dot.sdf"
      },
      "paint.literal": {
        "icon-color": "red"
      },
      "paint.constant": {
        "icon-color": "@constant"
      },
      "paint.function": {
        "icon-color": {
          "domain": [
            16,
            17
          ],
          "range": [
            "blue",
            "red"
          ],
          "type": "exponential"
        }
      }
    }
  ]
}
