{
    "version": 4,
    "sources": {
        "mapbox": {
            "type": "vector",
            "url": "local://tiles/{z}-{x}-{y}.vector.pbf",
            "maxZoom": 14
        }
    },
    "sprite": "local://sprites/sprite",
    "constants": {
        "@constant": "green"
    },
    "layers": [{
        "id": "background",
        "type": "background",
        "style": {
            "background-color": "white"
        }
    }, {
        "id": "icon",
        "source": "mapbox",
        "source-layer": "poi_label",
        "type": "symbol",
        "filter": {
            "maki": "restaurant"
        },
        "render": {
            "symbol-placement": "point",
            "icon-allow-overlap": true,
            "icon-ignore-placement": true,
            "icon-image": "dot.sdf"
        },
        "style": {
            "icon-halo-width": 4
        },
        "style.literal": {
            "icon-halo-color": "red"
        },
        "style.constant": {
            "icon-halo-color": "@constant"
        },
        "style.function": {
            "icon-halo-color": {
                "stops": [[16, "blue"], [17, "red"]]
            }
        }
    }]
}
