{
  "version": 5,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["http://localhost:2900/tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "constants": {
    "@constant": 0.4
  },
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "white"
    }
  }, {
    "id": "land",
    "source": "mapbox",
    "source-layer": "water",
    "type": "fill",
    "style": {},
    "style.literal": {
      "fill-opacity": 0.3
    },
    "style.constant": {
      "fill-opacity": "@constant"
    },
    "style.function": {
      "fill-opacity": {
        "stops": [[0, 0.5], [1, 0.6]]
      }
    }
  }]
}
