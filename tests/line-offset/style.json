{
  "version": 6,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["local://tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "constants": {
    "@constant": 10
  },
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "white"
    }
  }, {
    "id": "road",
    "source": "mapbox",
    "source-layer": "road",
    "type": "line",
    "style": {
      "line-width": 2,
      "line-color": "#000"
    },
    "style.literal": {
      "line-offset": 5
    },
    "style.constant": {
      "line-offset": "@constant"
    },
    "style.function": {
      "line-offset": {
        "stops": [[16, 15], [17, 20]]
      }
    }
  }]
}
