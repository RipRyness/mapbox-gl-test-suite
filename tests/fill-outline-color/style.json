{
    "version": 4,
    "sources": {
        "mapbox": {
            "type": "vector",
            "url": "local://tiles/{z}-{x}-{y}.vector.pbf",
            "maxZoom": 14
        }
    },
    "constants": {
        "@constant": "red"
    },
    "layers": [{
        "id": "background",
        "type": "background",
        "style": {
            "background-color": "white"
        }
    }, {
        "id": "land",
        "source": "mapbox",
        "source-layer": "water",
        "type": "fill",
        "style": {
        },
        "style.literal": {
            "fill-outline-color": "blue"
        },
        "style.constant": {
            "fill-outline-color": "@constant"
        },
        "style.function": {
            "fill-outline-color": {
                "stops": [[0, "green"], [1, "blue"]]
            }
        }
    }]
}
