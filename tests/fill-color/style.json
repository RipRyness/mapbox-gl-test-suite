{
  "version": 6,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["local://tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "constants": {
    "@constant": "red"
  },
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "white"
    }
  }, {
    "id": "land",
    "source": "mapbox",
    "source-layer": "water",
    "type": "fill",
    "style": {},
    "style.literal": {
      "fill-color": "blue"
    },
    "style.constant": {
      "fill-color": "@constant"
    },
    "style.function": {
      "fill-color": {
        "stops": [[0, "green"], [1, "blue"]]
      }
    },
    "style.opacity": {
      "fill-color": "rgba(255,0,0,1)",
      "fill-opacity": 0.5
    },
    "style.multiply": {
      "fill-color": "rgba(255,0,0,0.5)",
      "fill-opacity": 0.5
    }
  }]
}
