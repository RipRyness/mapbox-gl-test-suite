{
  "version": 8,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": [
        "local://tiles/{z}-{x}-{y}.vector.pbf"
      ]
    }
  },
  "sprite": "local://sprites/sprite",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "white"
      }
    },
    {
      "id": "icon-default",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "poi_label",
      "filter": [
        "==",
        "maki",
        "restaurant"
      ],
      "layout": {
        "symbol-placement": "point",
        "icon-allow-overlap": true,
        "icon-ignore-placement": true,
        "icon-image": "{maki}-12"
      },
      "paint": {
          "icon-opacity": 0
      },
      "paint.default": {
          "icon-opacity": 1
      }
    },
    {
      "id": "icon-literal",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "poi_label",
      "filter": [
        "==",
        "maki",
        "restaurant"
      ],
      "layout": {
        "symbol-placement": "point",
        "icon-allow-overlap": true,
        "icon-ignore-placement": true,
        "icon-image": "{maki}-12",
        "icon-size": 2
      },
      "paint": {
          "icon-opacity": 0
      },
      "paint.literal": {
          "icon-opacity": 1
      }
    },
    {
      "id": "icon-function",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "poi_label",
      "filter": [
        "==",
        "maki",
        "restaurant"
      ],
      "layout": {
        "symbol-placement": "point",
        "icon-allow-overlap": true,
        "icon-ignore-placement": true,
        "icon-image": "{maki}-12",
        "icon-size": {
          "stops": [
            [
              16,
              4
            ],
            [
              17,
              5
            ]
          ]
        }
      },
      "paint": {
          "icon-opacity": 0
      },
      "paint.function": {
          "icon-opacity": 1
      }
    }
  ]
}
