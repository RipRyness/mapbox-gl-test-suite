{
  "version": 6,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["local://tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "white"
    }
  }, {
    "id": "default",
    "source": "mapbox",
    "source-layer": "road",
    "type": "line",
    "style": {
      "line-width": 10,
      "line-color": "#000",
      "line-opacity": 0
    },
    "style.default": {
      "line-opacity": 1
    }
  }, {
    "id": "bevel",
    "source": "mapbox",
    "source-layer": "road",
    "type": "line",
    "render": {
      "line-join": "bevel"
    },
    "style": {
      "line-width": 10,
      "line-color": "#000",
      "line-opacity": 0
    },
    "style.bevel": {
      "line-opacity": 1
    },
    "style.bevel-transparent": {
      "line-opacity": 0.5
    }
  }, {
    "id": "miter",
    "source": "mapbox",
    "source-layer": "road",
    "type": "line",
    "render": {
      "line-join": "miter"
    },
    "style": {
      "line-width": 10,
      "line-color": "#000",
      "line-opacity": 0
    },
    "style.miter": {
      "line-opacity": 1
    },
    "style.miter-transparent": {
      "line-opacity": 0.5
    }
  }, {
    "id": "round",
    "source": "mapbox",
    "source-layer": "road",
    "type": "line",
    "render": {
      "line-join": "round"
    },
    "style": {
      "line-width": 10,
      "line-color": "#000",
      "line-opacity": 0
    },
    "style.round": {
      "line-opacity": 1
    },
    "style.round-transparent": {
      "line-opacity": 0.5
    }
  }]
}
