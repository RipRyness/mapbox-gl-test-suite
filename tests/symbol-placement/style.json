{
    "version": 4,
    "sources": {
        "mapbox": {
            "type": "vector",
            "url": "local://tiles/{z}-{x}-{y}.vector.pbf",
            "maxZoom": 14
        }
    },
    "sprite": "local://sprites/sprite",
    "layers": [{
        "id": "background",
        "type": "background",
        "style": {
            "background-color": "white"
        }
    }, {
        "id": "point",
        "source": "mapbox",
        "source-layer": "poi_label",
        "type": "symbol",
        "filter": {
            "maki": "restaurant"
        },
        "render": {
            "icon-image": "{maki}-12",
            "symbol-placement": "point"
        },
        "style": {
            "icon-opacity": 0
        },
        "style.point": {
            "icon-opacity": 1
        }
    }, {
        "id": "line",
        "source": "mapbox",
        "source-layer": "road",
        "type": "symbol",
        "render": {
            "icon-image": "triangle-stroked-12",
            "symbol-placement": "line"
        },
        "style": {
            "icon-opacity": 0
        },
        "style.line": {
            "icon-opacity": 1
        }
    }]
}
