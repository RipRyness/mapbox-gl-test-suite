{
  "version": 6,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["local://tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "sprite": "local://sprites/sprite",
  "glyphs": "local://glyphs/{fontstack}/{range}.pbf",
