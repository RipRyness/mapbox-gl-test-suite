{
  "version": 5,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["http://localhost:2900/tiles/{z}-{x}-{y}.vector.pbf"]
    }
  },
  "constants": {
    "@constant": [10, 10]
  },
  "layers": [{
    "id": "background",
    "type": "background",
    "style": {
      "background-color": "white"
    }
  }, {
    "id": "road",
    "source": "mapbox",
    "source-layer": "road",
    "type": "line",
    "style": {
      "line-width": 2,
      "line-color": "#000",
      "line-translate": [10, 10]
    },
    "style.map": {
      "line-translate-anchor": "map"
    },
    "style.viewport": {
      "line-translate-anchor": "viewport"
    }
  }]
}
