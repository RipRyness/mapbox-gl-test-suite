{
    "version": 4,
    "sources": {
        "mapbox": {
            "type": "vector",
            "url": "local://tiles/{z}-{x}-{y}.vector.pbf",
            "maxZoom": 14
        }
    },
    "constants": {
        "@constant": [10, 10]
    },
    "layers": [{
        "id": "background",
        "type": "background",
        "style": {
            "background-color": "white"
        }
    }, {
        "id": "road",
        "source": "mapbox",
        "source-layer": "road",
        "type": "line",
        "style": {
            "line-width": 2,
            "line-color": "#000",
            "line-translate": [10, 10]
        },
        "style.map": {
            "line-translate-anchor": "map"
        },
        "style.viewport": {
            "line-translate-anchor": "viewport"
        }
    }]
}
