{
  "version": 8,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": [
        "local://tiles/{z}-{x}-{y}.vector.pbf"
      ]
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "white"
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "mapbox",
      "source-layer": "road",
      "paint": {
        "line-width": 2,
        "line-color": "#000",
        "line-offset": 0
      },
      "paint.literal": {
        "line-offset": 2
      },
      "paint.literal-negative": {
        "line-offset": -3
      },
      "paint.function": {
        "line-offset": {
          "stops": [
            [
              13,
              1
            ],
            [
              15,
              4
            ]
          ]
        }
      }
    }
  ]
}
