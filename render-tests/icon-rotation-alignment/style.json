{
  "version": 8,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": [
        "local://tiles/{z}-{x}-{y}.vector.pbf"
      ]
    }
  },
  "sprite": "local://sprites/sprite",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "white"
      }
    },
    {
      "id": "viewport-point",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "poi_label",
      "filter": [
        "==",
        "maki",
        "restaurant"
      ],
      "layout": {
        "symbol-placement": "point",
        "icon-allow-overlap": true,
        "icon-ignore-placement": true,
        "icon-image": "{maki}-12",
        "icon-rotation-alignment": "viewport"
      },
      "paint": {
        "icon-opacity": 0
      },
      "paint.viewport-point": {
        "icon-opacity": 1
      }
    },
    {
      "id": "viewport-line",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "road",
      "layout": {
        "symbol-placement": "line",
        "icon-allow-overlap": true,
        "icon-ignore-placement": true,
        "icon-image": "restaurant-12",
        "icon-rotation-alignment": "viewport"
      },
      "paint": {
        "icon-opacity": 0
      },
      "paint.viewport-line": {
        "icon-opacity": 1
      }
    },
    {
      "id": "map-point",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "poi_label",
      "filter": [
        "==",
        "maki",
        "restaurant"
      ],
      "layout": {
        "symbol-placement": "point",
        "icon-allow-overlap": true,
        "icon-ignore-placement": true,
        "icon-image": "{maki}-12",
        "icon-rotation-alignment": "map"
      },
      "paint": {
        "icon-opacity": 0
      },
      "paint.map-point": {
        "icon-opacity": 1
      }
    },
    {
      "id": "map-line",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "road",
      "layout": {
        "symbol-placement": "line",
        "icon-allow-overlap": true,
        "icon-ignore-placement": true,
        "icon-image": "restaurant-12",
        "icon-rotation-alignment": "map"
      },
      "paint": {
        "icon-opacity": 0
      },
      "paint.map-line": {
        "icon-opacity": 1
      }
    }
  ]
}
